            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', parameters('AIFoundry_storageaccount_Build2025_HOL347_name'))]"
            ],
            "properties": {
                "cors": {
                    "corsRules": [
                        {
                            "allowedOrigins": [
                                "https://mlworkspace.azure.ai",
                                "https://ml.azure.com",
                                "https://*.ml.azure.com",
                                "https://ai.azure.com",
                                "https://*.ai.azure.com",
                                "https://mlworkspacecanary.azure.ai",
                                "https://mlworkspace.azureml-test.net"
                            ],
                            "allowedMethods": [
                                "GET",
                                "HEAD",
                                "PUT",
                                "DELETE",
                                "OPTIONS",
                                "POST",
                                "PATCH"
                            ],
                            "maxAgeInSeconds": 1800,
                            "exposedHeaders": [
                                "*"
                            ],
                            "allowedHeaders": [
                                "*"
                            ]
                        }
                    ]
                },
                "deleteRetentionPolicy": {
