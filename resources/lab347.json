{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "sites_exercise1_name": {
            "metadata":{
            "description": "Name of the Web App for Exercise 1"
            },
            "defaultValue": "[concat('exercise1', uniqueString(resourceGroup().id))]",
            "type": "String"
        },
        "sites_exercise2_name": {
             "metadata":{
            "description": "Name of the Web App for Exercise 2"
             },
            "defaultValue": "[concat('exercise2', uniqueString(resourceGroup().id))]",
            "type": "String"
        },
        "serverfarms_small_Build2025_HOL347_name": {
             "metadata":{
            "description": "Name of the App Service Plan for the small instances"
             },
            "defaultValue": "Build2025HOL347sm",
            "type": "String"
        },
        "serverfarms_large_Build2025_HOL347_name":{
             "metadata":{
            "description":"Name of the App Service Plan for the large instances"
             },
            "defaultValue":"Build2025HOL347lg",
            "type":"String"
        },
        "storageaccount_Build2025_HOL347_name": {
             "metadata":{
            "description": "Name of the Storage Account"
             },
            "defaultValue": "[concat('hol347', uniqueString(resourceGroup().id))]",
            "type": "String"
        },
        "accounts_Build2025_HOL347_name": {
             "metadata":{
            "description": "Name of the Azure Cognitive Services account"
             },
            "defaultValue": "[concat('Build2025HOL347', uniqueString(resourceGroup().id))]",
            "type": "String"
        },
        "workspace_name":{
             "metadata":{
            "description": "Name of the Log Analytics workspace"
             },
            "defaultValue": "[concat('Build2025HOL347', '-workspace')]",
            "type": "String"
        },
        "appinsights_name":{
             "metadata":{
            "description": "Name of the Application Insights instance"
             },
            "defaultValue": "lab347appins",
            "type": "String"
        },
        "RBAC_sites_exercise1_guid": {
             "metadata":{
            "description": "GUID for the RBAC assignment for Exercise 1"
             },
            "defaultValue": "[newGuid()]",
            "type": "String"
        },
        "RBAC_sites_exercise2_guid": {
             "metadata":{
            "description": "GUID for the RBAC assignment for Exercise 2"
            },
            "defaultValue": "[newGuid()]",
            "type": "String"
        },
        "region": {
             "metadata":{
            "description": "Region for the resources"
            },
            "defaultValue": "North Europe",
            "allowedValues": [
                    "North Europe",
                    "West US 2",
                    "East Asia",
                    "Southeast Asia"
            ],
            "type": "String"
        },
        "AzureAI_Region": {
             "metadata":{
            "description": "Region for the Azure Cognitive Services account, this allows a different region to be used in order to be able to use the gpt-4o model"
             },
            "defaultValue": "Sweden Central",
            "allowedValues": [
                "East US",
                "East US 2",
                "North Central US",
                "South Central US",
                "Sweden Central",
                "West US",
                "West US 3"
            ],
            "type": "String"
        }
    },
    "variables": {
        "exercise1_principalId": "resourceId('Microsoft.Web/sites', parameters('sites_exercise1_name')), '2019-08-01', 'full').identity.principalId",
        "exercise2_principalId": "resourceId('Microsoft.Web/sites', parameters('sites_exercise2_name')), '2019-08-01', 'full').identity.principalId"
    },
    "resources": [
        {
            "type": "Microsoft.CognitiveServices/accounts",
            "apiVersion": "2024-06-01-preview",
            "name": "[parameters('accounts_Build2025_HOL347_name')]",
            "location": "[parameters('AzureAI_Region')]",
            "sku": {
                "name": "S0"
            },
            "kind": "OpenAI",
            "properties": {
                "apiProperties": {},
                "customSubDomainName":"[toLower(parameters('accounts_Build2025_HOL347_name'))]",
                "networkAcls": {
                    "defaultAction": "Allow",
                    "virtualNetworkRules": [],
                    "ipRules": []
                },
                "publicNetworkAccess": "Enabled"
            }
        },
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2023-12-01",
            "name": "[parameters('serverfarms_small_Build2025_HOL347_name')]",
            "location": "[parameters('region')]",
            "sku": {
                "name": "P1mv3",
                "tier": "PremiumMV3",
                "size": "P1mv3",
                "family": "Pmv3",
                "capacity": 1
            },
            "kind": "linux",
            "properties": {
                "perSiteScaling": false,
                "elasticScaleEnabled": false,
                "maximumElasticWorkerCount": 1,
                "isSpot": false,
                "reserved": true,
                "isXenon": false,
                "hyperV": false,
