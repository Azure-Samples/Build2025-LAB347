                "appSettings": [
                    {
                        "name": "AzureAIAgent__ConnectionString",
                        "value": "[format('{0}.api.azureml.ms;{1};{2};{3}', toLower(replace(parameters('AzureAI_Region'), ' ', '')), subscription().subscriptionId, resourceGroup().name, parameters('AIFoundryHub_Build2025_HOL347_ProjectName'))]"                    },
                    {
                        "name": "AzureAIAgent__AgentId",
                        "value": "<insert agent id here>"
                    }
                ]
            }
        },
       
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2023-05-01",
            "name": "[parameters('storageaccount_Build2025_HOL347_name')]",
            "location": "[parameters('region')]",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
